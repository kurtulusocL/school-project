@model Lesson
@{
    ViewData["Title"] = "Dersi Güncelle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    @ViewData["Title"]
    <form class="form-inline" method="post" action="" name="">
        @Html.AntiForgeryToken()
        <div class="form-group">
            <label>Ders Adı</label>
            <input class="form-control" asp-for="Name" type="text" />
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-primary">Dersi Ekle</button>
            <a asp-controller="Lesson" asp-action="Index" class="btn btn-warning">İptal Et</a>
        </div>
    </form>
</div>
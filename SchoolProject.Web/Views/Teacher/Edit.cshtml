@model Teacher 
@{
    ViewData["Title"] = "Öğretmeni Güncelle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row">
        @ViewData["Title"]
        <form class="form-inline" method="post" action="" name="">
            @Html.AntiForgeryToken()
            <div class="form-group">
                <label>Öğretmen Adı</label>
                <input class="form-control" asp-for="NameSurname" type="text" />
            </div>
            <div class="form-group">
                <label>Ülkesi</label>
                <input class="form-control" asp-for="Country" type="text" />
            </div>
            <div class="form-group">
                <label>Adresi</label>
                <input class="form-control" asp-for="Address" type="text" />
            </div>
            <div class="form-group">
                <label>Ders Seçin</label>
                <select class="form-control m-bot15" name="LessonId">
                    <option>--Bir Ders Seçin</option>
                    @foreach (var item in ViewBag.Lessons)
                    {
                        <option value="@item.Id">@item.Name</option>
                    }
                </select>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary">Öğretmeni Ekle</button>
                <a asp-controller="Teacher" asp-action="Index" class="btn btn-warning">İptal Et</a>
            </div>
        </form>
    </div>
</div>
@model IEnumerable<Teacher>
@{
    ViewData["Title"] = "Öğretmen Listesi";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mg-2">
    <hr /><strong>@ViewData["Title"]</strong><br />
    <a asp-controller="Teacher" asp-action="Create" class="btn btn-primary btn-xs">Yeni Öğretmen Ekle</a>
    <hr />
    <div class="row">
        <table class="table table-hover table-striped table-bordered">
            <thead>
                <tr>
                    <th>Adı-Soyadı</th>
                    <th>Ülkesi</th>
                    <th>Adresi</th>
                    <th>Dersi</th>
                    <th>Öğrenci Sayısı</th>
                    <th>İşlemler</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.NameSurname</td>
                        <td>@item.Country</td>
                        <td>@item.Address</td>
                        <td>@item.Lesson.Name</td>
                        <td>@item.Students.Count()</td>
                        <td>
                            <a href="~/Teacher/Detail/@item.Id" class="btn btn-info btn-xs">Detay</a>
                            <a href="~/Teacher/Edit/@item.Id" class="btn btn-success btn-sm">Güncelle</a>
                            <a href="~/Teacher/Delete/@item.Id" onclick="return confirm('Emin Misiniz ?')" class="btn btn-danger btn-sm">Sil</a>
                        </td>
                    </tr>
                }
        </table>
    </div>
</div>